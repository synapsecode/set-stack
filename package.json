{
	"name": "set-stack",
	"version": "1.0.0",
	"description": "A Simple Template to Develop Webapps using the SET Stack (Svelte Express Tailwind)",
	"author": "Manas Hejmadi",
	"license": "ISC",
	"dependencies": {
		"concurrently": "^7.2.2",
		"cors": "^2.8.5",
		"express": "^4.18.1"
	},
	"scripts": {
		"client-install": "cd client && yarn",
		"serve:server": "nodemon server/server.js",
		"serve:client": "cd client && yarn dev",
		"app": "concurrently \"yarn serve:server\" \"yarn serve:client\"",
		"build": "cd client && yarn build",
		"start": "concurrently \"node server/server.js\" \"cd client && yarn start\""
	},
	"devDependencies": {
		"nodemon": "^2.0.6"
	},
	"main": "server/server.js"
}
